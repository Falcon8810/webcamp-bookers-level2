      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder: "name" %>
          <!--<input class="form-control name" type="text" value="test" name="user[name]" id="user_name">-->
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          <!--<input value="{}" data-reference="d04ef8124ae6259660cc750e4884b317" type="hidden" name="user[profile_image]"><input class="form-control-file user_image" data-reference="d04ef8124ae6259660cc750e4884b317" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">-->
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"user_introduction", placeholder: "introduction" %>
          <!--<textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>-->
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %>
          <!--<input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">-->
        </div>
      <% end %>
    </div>
  </div>
</div>