<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <!--<form enctype="multipart/form-data" action="/users/30269" accept-charset="UTF-8" method="post">-->
      <!--  <input name="utf8" type="hidden" value="✓">-->
