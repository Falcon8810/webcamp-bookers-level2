  <div class="row">
    <% if @user.id == current_user.id %>
      <p><%= link_to '', edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_30245" %></p>
    <% end %>
  </div>
  





